generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String
  passwordHash String
  
  decks Deck[]
}

model Deck {
  id Int @id @default(autoincrement())
  
  cards Card[]
  
  author User @relation(fields: [authorId], references: [id])
  authorId Int
}

model Card {
  id Int @id @default(autoincrement())
  front String
  back String
  
  deck Deck @relation(fields: [deckId], references: [id])
  deckId Int
}
