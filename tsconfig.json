{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "rootDir": ".",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictBindCallApply": true
  },
  "include": ["client","server","lib","components"],
  "exclude": ["node_modules", "build"]
}
